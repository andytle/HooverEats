<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/request_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingHorizontal="5dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/request_item_description"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:textSize="18sp"
        tools:text="asdfaaaaaaaaa" />

    <Button
        android:id="@+id/request_item_accept_btn"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/request_item_description"
        android:text="Accept"
        android:textSize="12dp" />

    <Button
        android:id="@+id/request_item_decline_btn"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_toEndOf="@+id/request_item_accept_btn"
        android:text="Decline"
        android:textSize="12dp" />

</LinearLayout>